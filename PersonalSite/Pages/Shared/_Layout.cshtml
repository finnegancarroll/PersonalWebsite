            </div>
        </div>
    </header>

    <!-- GRAPH ANIMATION SECTION -->
    <!-- Vertex Shader -->
    <script id="vertexshader" type="notjs">

        attribute vec4 a_position;
        void main() {
        gl_Position = a_position;
        }

    </script>

    <!-- Pixel Shader -->
    <script id="pixelshader" type="notjs">

        precision mediump float;
        void main() {
        //purple - 1, 0, 0.5, 1
        //Set pixel color to white
        gl_FragColor = vec4(1.0, 1.0, 1.0, 1);
        }

    </script>

    <!-- GRAPH ANIMATION -->
    <canvas id="graphcanvas" style="background: url('img/1.jpg')"></canvas> 

    <script src="~/js/graphanimation.js" asp-append-version="true"></script>

    <!-- PROJECTS -->
    <section id="projects" class="contact-section bg-black">
